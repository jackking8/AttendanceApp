<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.csf14kij.attendancemonitoring">

    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Register" />
        <activity android:name=".activities.HomePage" />
        <activity android:name=".activities.LecturerInput" />
        <activity android:name=".activities.ClassSessions" />
        <activity android:name=".activities.BarcodeScanner" />
        <activity android:name=".activities.Weeks" />
        <!--<activity android:name=".Modules"></activity>-->
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>